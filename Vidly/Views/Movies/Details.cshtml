@model Vidly.Models.Movie

@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="jumbotron">@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>

    @if (Model.ReleaseDate != null)
    {
        <li>Release Date: @Html.ValueFor(m => m.ReleaseDate, "{0:dd/MM/yyyy}")</li>
    }

    @if (Model.DateAdded != null)
    {
        <li>Date Added: @Html.ValueFor(m => m.DateAdded, "{0:dd/MM/yyyy}")</li>
    }

    <li>Number In Stock: @Model.NumberInStock</li>

</ul>


